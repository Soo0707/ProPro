<div class="topbar">
  <a href="#home"><%= user.username %>'s Course View</a>
  <% if Current.user == course.coordinator.user %>
  <div class="topbar-actions">
    <a href="<%= settings_course_path(course) %>" class="topbar-icon" title="Settings">
      <%= image_tag "settings.svg" %>
      <span class="topbar-info">Course Settings</span>
    </a>
    <a href="<%= new_course_project_template_path(course)%>" class="topbar-icon" title="Edit Project Template">
      <%= image_tag "project_templates.svg" %>
      <span class="topbar-info">Edit Project Templates</span>
    </a>
  </div>
  <% end %>
</div>
