<div class="project-card">
  <ul>
    <b><%= project_instance.title %></b><br>
    <b>
      <%= project.ownership.owner.respond_to?(:username) ?
            project.ownership.owner.username :
            project.ownership.owner.group_name %>
    </b>
    <ul>
      <li class="project-card inner">
        <% desc = project_instance.project_instance_fields
                   .joins(:project_template_field)
                   .find_by(project_template_fields: { label: 'Description' }) %>
        <p class="text"><%= desc&.value || "No description available" %></p>
      </li>
    </ul>
  </ul>
</div>
