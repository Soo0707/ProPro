<!DOCTYPE html>
<html lang="en">

<head>
    <%= stylesheet_link_tag "courses" %>
</head>

<body>
    <div class="main">
        <h1>New Student</h1>
        <br>

        <div class="container">
            <h5><%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %></h5>
            <h5><%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %></h5>
            <br>

            <%= form_with url: user_create_path do |form| %>
              <%= form.hidden_field :token, value: params[:token] %>
              <%= form.label :email, "Email:"%>
              <%= form.search_field :email, value: @email, disabled: true %><br>
              <%= form.password_field :otp, required: true, placeholder: "OTP"%><br>
              <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72 %><br>
              <%= form.password_field :password_confirmation, required: true, placeholder: "Enter password confirmation", maxlength: 72 %><br>
            <%= form.submit "Create Account" %>
            <% end %>
        </div>
    </div>
</body>
